@model UserInfo

@{
    ViewBag.Title = "Başvuru";
}

<h1 class="h4 text-center">Toplantı Katılım Formu</h1>

@* novalidate attribute, tarayıcı tarafındaki form doğrulamasını devre dışı bırakır
ve bu form doğrulaması işlemini bizim kod tarafından yapmamızı sağlar. *@
<form method="post" asp-controller="Meeting" asp-action="Apply" novalidate>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        @* for kelimesi bu labeli, bir input ile ilişkilendirileceği anlamına geliyor.
        artık input kısmındaki, type, name, id gibi özelliklerin, label kısmındaki for özelliği ile ilişkilendirilmiş
        olmasına gerek kalmıyor, asp-for sayesinde otomatik olarak ilişkilendirilmiş ve  UserInfoya göre
        veri tipi vs. ayarlanmış oluyor *@
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="WillAttend" class="form-label">Email</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Seçiniz</option>
            <option value="true">Evet, geliyorum</option>
            <option value="false">Hayır, gelmiyorum</option>
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>